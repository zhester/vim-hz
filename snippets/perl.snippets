	#=============================================================================
	# ${2:description}
	#=============================================================================
	sub ${1:name} {
	
	    ${3}
	
	}
snippet funargs
	#=============================================================================
	# ${2:description}
	#=============================================================================
	sub ${1:name} {
	
	    my @param1 = @{ shift( @_ ) };
	    my $param2 = shift( @_ );
	
	    ${3}
	
	}
