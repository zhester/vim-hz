# Generic Shell Script
snippet shell
	#!/usr/bin/env perl
	#=============================================================================
	#
	# ${1:Shell Script}
	#
	#=============================================================================
	
	use strict;
	use warnings;
	
	
	#=============================================================================
	# Program Entry Point
	#=============================================================================
	sub main {
	
	    # Arguments.
	    my $num_args = scalar( @_ );
	    #my $arg      = shift( @_ );
	
	    ${2}
	
	    # Return result.
	    return 0
	}
	
	
	#=============================================================================
	exit( &main( @ARGV ) );
	
# end of snippet

